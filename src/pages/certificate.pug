extends ../pug/layout.pug

block meta
  title Личный кабинет
  meta(name='description', content='')


block content
  .content
    .content__container
      +breadcrumbs
        +breadcrumbs-item('Главная', 'index.html')
        +breadcrumbs-item('Личный кабинет', 'profile.html')
        +breadcrumbs-item('Желаемое')
      main.content__main
        +profile-head('Сертификат')        
        .content__inner.content__inner--may-like
          +content-block('full-width')
            .content-block__text-wrapper
              +categories-list
                ul.categories-list__wrap
                  li
                    a(href='profile.html') Кабинет
                  li
                    a(href='changeprofile.html') Мои данные
                  li
                    a(href='my-order.html') Мои заказы
                  li
                    a(href='desired.html') Желаемое <span>(8)</span>
                  li
                    a.categories-list__active(href='certificate.html') Подарочный сертификат
        .content__inner.content__inner--mob-m
          .certificate
            img(src='img/Rectangle86.jpg', alt='')
            .certificate__wrap
              .certificate__info
                .certificate__price 1000₽
                .certificate__text Главное ведь внимание, не так ли?
              .certificate__btn
                +btn('подарить', 'black')(data-toggle='modal', data-target='#modal-certificate')
          .certificate
            img(src='img/Rectangle 289.jpg', alt='')
            .certificate__wrap
              .certificate__info
                .certificate__price 3000₽
                .certificate__text Главное ведь внимание, не так ли?
              .certificate__btn
                +btn('подарить', 'black')
          .certificate
            img(src='img/Rectangle 293.jpg', alt='')
            .certificate__wrap
              .certificate__info
                .certificate__price 5000₽
                .certificate__text Главное ведь внимание, не так ли?
              .certificate__btn
                +btn('подарить', 'black')
          .certificate
            img(src='img/Rectangle 296.jpg', alt='')
            .certificate__wrap
              .certificate__info
                .certificate__price 10 000₽
                .certificate__text Главное ведь внимание, не так ли?
              .certificate__btn
                +btn('подарить', 'black')
        .modal(id='modal-certificate', class='modal--certificate', tabindex='-1', role='dialog')
          .modal__dialog(role='document')
            .modal__content
              .modal__header
                span.close.modal__close(data-dismiss='modal', aria-label='Закрыть') #[span]
              .modal__body
                .certificate__modal-block
                  label.certificate__modal-label E-mail получателя
                    +field-text({
                      attrs: {
                        placeholder: 'email@example'
                      }
                    })
                .certificate__modal-block
                  label.certificate__modal-label Кому дарим?
                    +field-text({
                      attrs: {
                        placeholder: 'ФИО'
                      }
                    })
                .certificate__modal-block
                  label.certificate__modal-label От?
                    +field-text({
                      attrs: {
                        placeholder: 'Ваше Имя'
                      }
                    })
                .certificate__modal-block
                  label.certificate__modal-label Пожелания?
                    +field-text({
                      isTextarea: true,
                      attrs: {
                        placeholder: 'Сопроводительное сообщение'
                      }
                    })
