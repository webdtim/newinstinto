extends ../pug/layout.pug

block meta
  title Страница товара
  meta(name='description', content='')

block content
  .content
    .content__container
      +breadcrumbs
        +breadcrumbs-item('Главная', 'index.html')
        +breadcrumbs-item('корзина')
      main.content__main
        .cart
          .cart__select
            .content-block__wrap-mob
              .cart__title
                h3 Ваша корзина
                  span  (3 товара)
                .cart__title-info
                  span Ваши товары зарезервированны на 60 минут
              .cart__card-wrapper
                .cart__card
                  .cart__card-img
                    img(src='img/order-item-1.png', alt='название товара')
                  .cart__card-info
                    .cart__card-price
                      span.cart__card-price-actual 4 990₽
                      +old-price('5 783₽')
                    .cart__card-name Black Silk Luxe Bra подушка еще что-то там и это испытание текста в 3 строки
                    .cart__card-action
                      form(name='delete-cart')
                        .cart__card-delete
                          .cart__card-close
                          span.cart__card-delete-text Удалить из корзины
                      +like
                .cart__card-select
                  +select
                    option(value='12D', selected) 12D
                    option(value='75C') 75C
                    option(value='small') small
                    option(value='big') big
                    option(value='12D') 12D
                  +select
                    option(value='1', selected) 1
                    option(value='2') 2
                    option(value='3') 3
                    option(value='4') 4
              .cart__card-wrapper
                .cart__card
                  .cart__card-img
                    img(src='img/order-item-1.png', alt='название товара')
                  .cart__card-info
                    .cart__card-price
                      span.cart__card-price-actual 4 990₽
                      +old-price('5 783₽')
                    .cart__card-name Black Silk Luxe Bra подушка
                    .cart__card-action
                      form(name='delete-cart')
                        .cart__card-delete
                          .cart__card-close
                          span.cart__card-delete-text Удалить из корзины
                      +like
                .cart__card-select
                  +select
