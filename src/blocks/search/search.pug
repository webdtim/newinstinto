//- Все примеси в этом файле должны начинаться c имени блока (search)

mixin search(label, targetId, switchableClass)

  //- Принимает:
  //-   label           {string} - описание, значение атрибута aria-label
  //-   targetId        {string} - атрибут id целевого элемента (без символа #), на котором по клику будет меняться класс
  //-   switchableClass {string} - класс, добавляемый/убираемый с целевого элемента
  //- Вызов:
        +search('Показать пример кода', 'burger-code', 'blocks-library__code--shown')
        +search('Показать ничто')(data-some="SOME")

  -
    label = label || 'Toggle block ' + targetId
    if (typeof (targetId) !== 'undefined' && targetId !== '') attributes['data-target-id'] = targetId
    if (typeof (switchableClass) !== 'undefined' && switchableClass !== '')
      attributes['data-target-class-toggle'] = switchableClass

  a.search(role='button')&attributes(attributes)
    .search__inner
      svg.search__icon
        use(xlink:href='img/sprite.svg#icon-search')




