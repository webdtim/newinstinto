//- Все примеси в этом файле должны начинаться c имени блока (product-photo)

mixin product-photo(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +product-photo('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' product-photo--' + modsList[i].trim();
      }
    }

  .product-photo(class=allMods)&attributes(attributes)
    block
