//- Все примеси в этом файле должны начинаться c имени блока (header-search)

mixin header-search(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +header-search('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' header-search--' + modsList[i].trim();
      }
    }

  .header-search(class=allMods)&attributes(attributes)#header-search
    .header-search__inner
      block
