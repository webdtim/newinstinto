//- Все примеси в этом файле должны начинаться c имени блока (categories-list)

mixin categories-list(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +categories-list('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' categories-list--' + modsList[i].trim();
      }
    }

  .categories-list(class=allMods)&attributes(attributes)
    block
